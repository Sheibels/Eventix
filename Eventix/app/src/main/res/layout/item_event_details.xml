<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvEventType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Casamento"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvEventStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por Confirmar"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/status_pending_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginStart="12dp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEventRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criador"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/brown"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_profile"
            android:drawablePadding="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                app:tint="#757575"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/07/2025"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_time"
                app:tint="#757575"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:30"
                android:textSize="14sp"
                android:textColor="#757575" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                app:tint="#757575"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvEventLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quinta do Sol - Estrada Nacional, Lisboa"
                android:textSize="14sp"
                android:textColor="#757575"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_guests"
                app:tint="#757575"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvEventParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 participantes"
                android:textSize="14sp"
                android:textColor="#757575" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvEventCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.250â‚¬"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#8B2500"
                android:visibility="visible" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardManagerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E8F5E8"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_profile"
                        app:tint="#8B2500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestor Associado"
                        android:textColor="#8B2500"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvManagerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Gestor"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvManagerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gestor@email.com"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvManagerPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="912 345 678"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginVertical="8dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnEditEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EDITAR"
                android:textColor="#8B2500"
                android:textStyle="bold"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                app:strokeColor="#8B2500"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="4dp"
                android:minHeight="40dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnDeleteEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ELIMINAR"
                android:textColor="#F44336"
                android:textStyle="bold"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                app:strokeColor="#F44336"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                android:layout_marginHorizontal="4dp"
                android:minHeight="40dp"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btnMessageManager"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_message"
                android:background="@drawable/button_background"
                app:tint="@color/white"
                android:contentDescription="Mensagem ao gestor"
                android:layout_marginStart="4dp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>